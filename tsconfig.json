{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "ES6",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/*",
    "dist",
    "jest.config.ts"
  ],
  "typeAcquisition": {
    "exclude": ["jest"]
  }
}
